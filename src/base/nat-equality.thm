proof nat-eq-inc : [ |- nat-eq N1 N2] -> [ |- nat-eq (succ N1) (succ N2)] =
/ total /
intros
{ N : ( |- nat), N1 : ( |- nat)
| x : [ |- nat-eq N N1]
; split x as
  case nat-eq/i:
  { N1 : ( |- nat)
  | x : [ |- nat-eq N1 N1]
  ; solve [ |- nat-eq/i ]
  }
}
;
